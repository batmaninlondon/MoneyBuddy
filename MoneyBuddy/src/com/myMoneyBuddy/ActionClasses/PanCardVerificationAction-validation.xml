<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="panCard">
        <field-validator type="requiredstring">
             <message>Pancard Number can not beee blank.</message>
        </field-validator>

        <field-validator type="regex">  
          <param name="regexExpression">[a-zA-Z][a-zA-Z][a-zA-Z][a-zA-Z][a-zA-Z][0-9][0-9][0-9][0-9][a-zA-Z]</param>  
          <message>Please enter a valid PanCard Number.</message>  
        </field-validator>
 	</field>  
    
</validators>